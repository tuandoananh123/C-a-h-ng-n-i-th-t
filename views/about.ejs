<%- include('./partials/header') %>

  <div class="container content-wrapper py-5">
    <% if (aboutData) { %>
      <!-- Banner Section -->
      <div class="text-center mb-5">
        <img src="<%= aboutData.image %>" alt="<%= aboutData.title %>" class="img-fluid rounded-3 mb-4" style="width: 1500px;
    max-height: 400px;">
        <h1 class="display-4 fw-bold mb-3">
          <%= aboutData.title %>
        </h1>
        <div class="col-lg-8 mx-auto">
          <p class="lead text-muted">
            <%= aboutData.description %>
          </p>
        </div>
      </div>

      <!-- Social Links Section -->
      <% if (aboutData.links && aboutData.links.length> 0) { %>
        <div class="row mb-5 justify-content-center">
          <div class="col-md-8 text-center">
            <h3 class="mb-4">Kết nối với chúng tôi</h3>
            <div class="social-links">
              <% aboutData.links.forEach((link, index)=> { %>
                <a href="<%= link %>" target="_blank" class="btn btn-lg btn-outline-primary mx-2 mb-3">
                  <% if (link.includes('facebook.com')) { %>
                    <i class="fab fa-facebook-f me-2"></i>Facebook
                    <% } else { %>
                      <i class="fas fa-globe me-2"></i>Website #<%= index + 1 %>
                        <% } %>
                </a>
                <% }); %>
            </div>
          </div>
        </div>
        <% } %>

          <!-- Feature Highlights Section -->
          <div class="row mb-5">
            <div class="col-12 text-center mb-5">
              <h2 class="section-title">Tại sao chọn chúng tôi?</h2>
              <div class="divider mx-auto"></div>
            </div>

            <div class="col-md-4 mb-4">
              <div class="card h-100 border-0 shadow-sm text-center p-4">
                <div class="feature-icon-box mx-auto mb-4">
                  <i class="fas fa-shipping-fast text-primary"></i>
                </div>
                <h4 class="mb-3">Giao hàng nhanh chóng</h4>
                <p class="text-muted mb-0">Dịch vụ giao hàng nhanh chóng và đảm bảo an toàn trong thời gian ngắn nhất
                </p>
              </div>
            </div>

            <div class="col-md-4 mb-4">
              <div class="card h-100 border-0 shadow-sm text-center p-4">
                <div class="feature-icon-box mx-auto mb-4">
                  <i class="fas fa-medal text-primary"></i>
                </div>
                <h4 class="mb-3">Chất lượng đảm bảo</h4>
                <p class="text-muted mb-0">Tất cả sản phẩm đều được kiểm định chất lượng nghiêm ngặt trước khi đến tay
                  khách hàng</p>
              </div>
            </div>

            <div class="col-md-4 mb-4">
              <div class="card h-100 border-0 shadow-sm text-center p-4">
                <div class="feature-icon-box mx-auto mb-4">
                  <i class="fas fa-headset text-primary"></i>
                </div>
                <h4 class="mb-3">Hỗ trợ 24/7</h4>
                <p class="text-muted mb-0">Đội ngũ nhân viên tận tâm, sẵn sàng hỗ trợ quý khách mọi lúc mọi nơi</p>
              </div>
            </div>
          </div>

          <!-- Contact Section -->
          <div class="row">
            <div class="col-12 text-center mb-5">
              <h2 class="section-title">Liên hệ với chúng tôi</h2>
              <div class="divider mx-auto"></div>
            </div>

            <div class="col-lg-6 mb-4 mb-lg-0">
              <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-4 p-md-5">
                  <h4 class="mb-4">Gửi tin nhắn cho chúng tôi</h4>
                  <form>
                    <div class="row">
                      <div class="col-md-6 mb-3">
                        <label for="name" class="form-label">Họ tên</label>
                        <input type="text" class="form-control" id="name" placeholder="Nhập họ tên của bạn">
                      </div>
                      <div class="col-md-6 mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" placeholder="Nhập email của bạn">
                      </div>
                    </div>

                    <div class="mb-3">
                      <label for="subject" class="form-label">Tiêu đề</label>
                      <input type="text" class="form-control" id="subject" placeholder="Nhập tiêu đề">
                    </div>

                    <div class="mb-4">
                      <label for="message" class="form-label">Tin nhắn</label>
                      <textarea class="form-control" id="message" rows="5"
                        placeholder="Nhập nội dung tin nhắn"></textarea>
                    </div>

                    <button type="submit" class="btn btn-primary">Gửi tin nhắn</button>
                  </form>
                </div>
              </div>
            </div>

            <div class="col-lg-6">
              <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-4 p-md-5">
                  <h4 class="mb-4">Thông tin liên hệ</h4>

                  <div class="d-flex mb-4">
                    <div class="contact-icon-box me-3">
                      <i class="fas fa-map-marker-alt text-primary"></i>
                    </div>
                    <div>
                      <h5 class="mb-1">Địa chỉ</h5>
                      <p class="mb-0">12 Nguyễn Văn Bảo, Phường 1, Gò Vấp, Hồ Chí Minh, Việt Nam</p>
                    </div>
                  </div>

                  <div class="d-flex mb-4">
                    <div class="contact-icon-box me-3">
                      <i class="fas fa-phone-alt text-primary"></i>
                    </div>
                    <div>
                      <h5 class="mb-1">Điện thoại</h5>
                      <p class="mb-0">(08) 68848172</p>
                    </div>
                  </div>

                  <div class="d-flex mb-4">
                    <div class="contact-icon-box me-3">
                      <i class="fas fa-envelope text-primary"></i>
                    </div>
                    <div>
                      <h5 class="mb-1">Email</h5>
                      <p class="mb-0">doantuan13082003@gmail.com</p>
                    </div>
                  </div>

                  <div class="d-flex">
                    <div class="contact-icon-box me-3">
                      <i class="fas fa-clock text-primary"></i>
                    </div>
                    <div>
                      <h5 class="mb-1">Giờ làm việc</h5>
                      <p class="mb-0">Thứ 2 - Thứ 6: 8:00 - 17:00<br>Thứ 7: 8:00 - 12:00</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <% } else { %>
            <div class="alert alert-info">
              <p class="mb-0">Thông tin về công ty đang được cập nhật. Vui lòng quay lại sau!</p>
            </div>
            <% } %>
  </div>

  <!-- CSS cho trang About -->
  <style>
    .section-title {
      position: relative;
      margin-bottom: 20px;
      font-weight: 600;
      color: #333;
    }

    .divider {
      height: 4px;
      width: 70px;
      background-color: #0d6efd;
      border-radius: 2px;
      margin-bottom: 30px;
    }

    .feature-icon-box {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 80px;
      height: 80px;
      border-radius: 50%;
      background-color: rgba(13, 110, 253, 0.1);
    }

    .feature-icon-box i {
      font-size: 2rem;
    }

    .contact-icon-box {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 40px;
      height: 40px;
      border-radius: 50%;
      background-color: rgba(13, 110, 253, 0.1);
    }

    .contact-icon-box i {
      font-size: 1.2rem;
    }

    @media (max-width: 768px) {
      .feature-icon-box {
        width: 60px;
        height: 60px;
      }

      .feature-icon-box i {
        font-size: 1.5rem;
      }
    }
  </style>

  <%- include('./partials/footer') %>