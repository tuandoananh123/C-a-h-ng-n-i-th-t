  <!-- JavaScript cho form liên hệ -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const contactForm = document.getElementById('contactForm');
      const alertElement = document.getElementById('contactFormAlert');
      
      if (contactForm) {
        contactForm.addEventListener('submit', async function(e) {
          e.preventDefault();
          
          // Disable submit button
          const submitBtn = document.getElementById('submitContactBtn');
          submitBtn.disabled = true;
          submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Đang gửi...';
          
          // Get form data
          const formData = {
            name: document.getElementById('name').value,
            email: document.getElementById('email').value,
            subject: document.getElementById('subject').value,
            message: document.getElementById('message').value
          };
          
          try {
            const response = await fetch('/api/contact', {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json'
              },
              body: JSON.stringify(formData)
            });
            
            const result = await response.json();
            
            if (result.success) {
              // Show success message
              alertElement.className = 'alert alert-success';
              alertElement.textContent = 'Cảm ơn bạn đã liên hệ với chúng tôi';
              alertElement.style.display = 'block';
              
              // Reset form
              contactForm.reset();
            } else {
              // Show error message
              alertElement.className = 'alert alert-danger';
              alertElement.textContent = result.message || 'Đã có lỗi xảy ra, vui lòng thử lại sau';
              alertElement.style.display = 'block';
            }
          } catch (error) {
            // Show error message
            alertElement.className = 'alert alert-danger';
            alertElement.textContent = 'Đã có lỗi xảy ra, vui lòng thử lại sau';
            alertElement.style.display = 'block';
            console.error('Error submitting contact form:', error);
          } finally {
            // Enable submit button
            submitBtn.disabled = false;
            submitBtn.innerHTML = 'Gửi tin nhắn';
            
            // Scroll to the alert
            alertElement.scrollIntoView({ behavior: 'smooth', block: 'center' });
            
            // Hide alert after 5 seconds if it's a success message
            if (alertElement.classList.contains('alert-success')) {
              setTimeout(() => {
                alertElement.style.display = 'none';
              }, 5000);
            }
          }
        });
      }
    });
  </script>

